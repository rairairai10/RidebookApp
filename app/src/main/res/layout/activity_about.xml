<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="Who We Are"
            android:textColor="@color/green"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RideBook is a  platform that will ride you to the next level."
            android:gravity="center"
            android:fontFamily="@font/balsamiq_sans"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      At RideBook, we're not just another mobile application; we're your passport to the next level of riding experiences. We understand the thrill of the open road, the camaraderie of fellow riders, and the need for convenience in planning your riding adventures. That's why we've crafted RideBook to be your ultimate companion for creating and discovering ride events like never before."
            android:paddingStart="20dp"
            android:paddingRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amiko"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Mission:"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:fontFamily="@font/fredoka_one"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Our mission is simple: to empower the riding community by providing a seamless, social media-inspired platform designed exclusively for riders. We believe that riding is more than just a hobby; it's a lifestyle, and we're here to enhance that lifestyle in every way possible."
            android:fontFamily="@font/amiko"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:paddingRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Features:"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:fontFamily="@font/fredoka_one"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  1.	Create and Discover Ride Events: "
            android:fontFamily="@font/alata"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:paddingRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With RideBook, you can easily create and share your ride events with the community. Whether it's a scenic Sunday cruise, a thrilling off-road adventure, or a charity ride, our platform makes planning and promoting events a breeze."
